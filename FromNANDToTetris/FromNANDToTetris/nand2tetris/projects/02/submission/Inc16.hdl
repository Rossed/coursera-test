/**
 * 16-bit incrementer:
 * out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
   // Put you code here:
   Not16(in=true, out[0]=w1, out[1..15]=w2);
   Not(in=w1, out=w3);
   Add16(a=in, b[0]=w3, b[1..15]=w2, out=out);
}